@page
@model AboutModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Pages/Shared/_BulmaLayout.cshtml";

}
<!-- Begin Main Content -->
<div class="main-content">
    <!-- Begin About Me Section -->
    <div class="section-light about-me" id="about-me">
        <div class="container box">
            <div class="column is-12 has-background-link box about-me">
                <h1 style="font-family:'Kaushan Script';" class="title has-text-white has-text-centered section-title">About Us</h1>
            </div>
            <div class="columns is-multiline">
                <div class="column is-6 has-vertically-aligned-content">
                    <p class="is-larger">
                        <strong class="has-text-link">
                            @Model.AboutUs.AboutUsHeading
                        </strong>
                    </p>
                    <br />
                    <p>
                        @Model.AboutUs.AboutUsText
                    </p>
                    <br />
                    <div class="is-divider"></div>

                </div>
                <div class="column is-6 right-image " data-aos="fade-left">
                    <img class="is-rounded"
                         src="https://picsum.photos/id/366/600/375"
                         alt="" />
                </div>
            </div>
        </div>
        <div class="container box">
            <div class="column is-12 has-background-success  box about-me">
                <h1 style="font-family:'Kaushan Script';" class="title has-text-white has-text-centered section-title">Why Us</h1>
            </div>
            <div class="columns is-multiline">
                <div class="column is-6 has-vertically-aligned-content"
                     data-aos="fade-right">
                    <p class="is-larger">
                        <strong class="has-text-success">
                            @Model.AboutUs.WhyUsHeading
                        </strong>
                    </p>
                    <br />
                    <p>
                        @Model.AboutUs.WhyUsText
                    </p>
                    <br />
                    <div class="is-divider"></div>

                </div>
                <div class="column is-6 right-image " data-aos="fade-left">
                    <img class="is-rounded"
                         src="https://picsum.photos/id/366/600/375"
                         alt="" />
                </div>
            </div>
        </div>

    </div>

</div>


