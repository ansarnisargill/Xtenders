@page
@model XtendersProject.Quotaions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Quotations</h1>
<div class="card p-4">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quotation[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quotation[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quotation[0].Detail)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Quotation)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detail)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-outline-dark btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
