@page
@model XtendersProject.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="card p-4 col-lg-6 offset-lg-3">
    <div class="card-body text-center p-4">
        

        <h3>Are you sure you want to delete <span style="color:green;">@Model.Product.Name</span> ? </h3>
        
  

            <form method="post">
                <input type="hidden" asp-for="Product.ID" />
                <input type="submit" value="Delete" class="btn mt-4 btn-outline-danger btn-lg" /> 
                <a class="btn btn-outline-primary btn-lg mt-4" asp-page="./Index">Back to List</a>
            </form>
       
    </div>
</div>
